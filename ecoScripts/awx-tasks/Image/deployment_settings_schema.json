{
    "definitions": {}, 
    "$schema": "http://json-schema.org/draft-07/schema#", 
    "$id": "http://example.com/root.json", 
    "type": "object", 
    "title": "The Root Schema", 
    "required": [
      "Tasks"
    ], 
    "properties": {
      "Tasks": {
        "$id": "#/properties/Tasks", 
        "type": "array", 
        "title": "The Tasks Schema", 
        "items": {
          "$id": "#/properties/Tasks/items", 
          "type": "object", 
          "title": "The Items Schema", 
          "required": [
            "name",
            "count"
          ], 
          "properties": {
            "name": {
              "$id": "#/properties/Tasks/items/properties/name", 
              "type": "string", 
              "title": "The Name Schema", 
              "default": "", 
              "examples": [
                "Deploy VM"
              ], 
              "pattern": "^(.*)$"
            }, 
            "count": {
              "$id": "#/properties/Tasks/items/properties/count", 
              "type": "integer", 
              "title": "The Count Schema", 
              "default": 1,
              "maximum": 20,
              "examples": [
                9
              ]
            }, 
            "credentials": {
              "$id": "#/properties/Tasks/items/properties/credentials", 
              "type": "array", 
              "title": "The Credentials Schema", 
              "items": {
                "$id": "#/properties/Tasks/items/properties/credentials/items", 
                "type": "string", 
                "title": "The Items Schema", 
                "default": "", 
                "examples": [
                  "Auslab Infra vCenter", 
                  "Ansible Tower"
                ], 
                "pattern": "^(.*)$"
              }
            }, 
            "wait": {
              "$id": "#/properties/Tasks/items/properties/wait", 
              "type": "string", 
              "title": "The Wait Schema", 
              "default": "",
              "enum": ["yes","no"],
              "examples": [
                "yes"
              ], 
              "pattern": "^(.*)$"
            }
          }
        }
      }
    }
  }