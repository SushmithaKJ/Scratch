{
  "version": "0.3",
  "type": "api",
  "configurable": true,
  "schedulable": true,
  "docker_image": "dockerdipika/aurora:consumer-demo",
  "config_parameters": [
    {
      "name": "aci_parameters",
      "label": "ACI Parameters",
      "order": 1,
      "controls": [
        {
          "label": "Test ACI",
          "action": "test_aci",
          "message": "Testing ACI",
          "type": "icon",
          "icon": {
            "group": "action",
            "name": "assessment"
          }
        }
      ],
      "items": [
        {
          "name": "tenant_name",
          "label": "Tenant Name",
          "type": "text",
          "environment_variable_name": "TENANT_NAME",
          "placeholder": "Tenant Name",
          "required": true,
          "order": 1,
          "verify": false
        },
        {
          "name": "ap_name",
          "label": "Application Profile Name",
          "type": "text",
          "environment_variable_name": "AP_NAME",
          "placeholder": "Application Profile Name",
          "required": true,
          "order": 2,
          "verify": false
        }
      ]
    },
    {
      "name": "kafka_connectivity_options",
      "label": "Kafka Connectivity Options",
      "order": 3,
      "controls": [
        {
          "label": "Test Kafka Connectivity",
          "action": "test_kafka_connectivity",
          "message": "Testing Kafka Connectivity",
          "type": "icon",
          "icon": {
            "group": "action",
            "name": "assessment"
          }
        }
      ],
      "items": [
        {
          "name": "kakfa_host",
          "label": "Kafka Host",
          "type": "text",
          "environment_variable_name": "KAFKA_HOSTNAME",
          "placeholder": "Kafka Hostname or IP",
          "required": true,
          "order": 1,
          "verify": false
        },
        {
          "name": "kakfa_port",
          "label": "Kafka Port",
          "type": "text",
          "environment_variable_name": "KAFKA_PORT",
          "placeholder": "Kafka port",
          "required": true,
          "order": 2,
          "verify": false
        },
       {
          "name": "kakfa_in_topic",
          "label": "Pipeline Input topic",
          "type": "text",
          "environment_variable_name": "KAFKA_INPUT_TOPIC",
          "placeholder": "Pipeline Input Topic",
          "required": true,
          "order": 3,
          "verify": false
	},
	{
          "name": "kakfa_op_topic",
          "label": "Pipeline Output topic",
          "type": "text",
          "environment_variable_name": "KAFKA_OUTPUT_TOPIC",
          "placeholder": "Pipeline Output Topic",
          "required": true,
          "order": 4,
          "verify": false
	}
      ]
    }
  ]
}
