{
  "version": "0.1",
  "type": "api",
  "configurable": true,
  "schedulable": true,
  "docker_image": "maxyso/aurora",
  "config_parameters": [
    {
      "name": "connection_parameters",
      "label": "Connection Parameters",
      "order": 1,
      "controls": [
        {
          "label": "Test Connectivity",
          "action": "test_connectivity",
          "message": "Testing Connectivity",
          "type": "icon",
          "icon": {
            "group": "action",
            "name": "assessment"
          }
        }
      ],
      "items": [
        {
          "name": "service_now",
          "label": "ServiceNow",
          "type": "text",
          "environment_variable_name": "SNOW_URL",
          "required": true,
          "placeholder": "ServiceNow URL (including protocol)",
          "order": 1,
          "verify": false
        },
        {
          "name": "snow_username",
          "label": "ServiceNow Username",
          "type": "text",
          "environment_variable_name": "SNOW_USERNAME",
          "required": true,
          "placeholder": "ServiceNow Username",
          "order": 2,
          "verify": false
        },
        {
          "name": "snow_password",
          "label": "ServiceNow Password",
          "type": "password",
          "environment_variable_name": "SNOW_PASSWORD",
          "required": true,
          "placeholder": "ServiceNow Password",
          "order": 3,
          "verify": false
        }
      ]
    },
    {
      "name": "aci_options",
      "label": "ACI Options",
      "order": 2,
      "items": [
        {
          "name": "tenant_name",
          "label": "Tenant Name",
          "type": "text",
          "environment_variable_name": "TENANT_NAME",
          "placeholder": "Tenant Name",
          "required": true,
          "order": 1,
          "verify": false
        },
        {
          "name": "ap_name",
          "label": "Application Profile Name",
          "type": "text",
          "environment_variable_name": "AP_NAME",
          "placeholder": "Application Profile Name",
          "required": true,
          "order": 2,
          "verify": false
        }
      ]
    },
    {
      "name": "kafka_options",
      "label": "Kafka Options",
      "order": 3,
      "items": [
        {
          "name": "kakfa_host",
          "label": "Kafka Host",
          "type": "text",
          "environment_variable_name": "KAFKA_HOSTNAME",
          "placeholder": "Kafka Hostname or IP",
          "required": true,
          "order": 1,
          "verify": false
        }
      ]
    }
  ]
}
