{
    "version": "0.1",
    "type": "api",
    "configurable": true,
    "schedulable": true,
    "docker_image": "ecohub:vcenter:latest",
    "config_parameters": [
        {
            "name": "connection_parameters",
            "label": "Connection Parameters",
            "order": 1,
            "items": [
                {
                    "name": "vc",
                    "label": "vCenter",
                    "type": "text",
                    "environment_variable_name": "VC",
                    "required": true,
                    "placeholder": "vCenter Hostname or IP",
                    "order": 1,
                    "verify": false
                },
                {
                    "name": "vc username",
                    "label": "VC Username",
                    "type": "text",
                    "environment_variable_name": "VC_USERNAME",
                    "required": true,
                    "placeholder": "vCenter Username (read-only)",
                    "order": 2,
                    "verify": false
                },
                {
                    "name": "vc password",
                    "label": "VC Password",
                    "type": "password",
                    "environment_variable_name": "VC_PASSWORD",
                    "required": true,
                    "placeholder": "vCenter Password",
                    "order": 3,
                    "verify": false
                }
            ]
        },
        {
            "name": "annotation_options",
            "label": "Annotation Options",
            "order": 2,
            "items": [
                {
                    "name": "vm_name",
                    "label": "VM Name",
                    "type": "switch",
                    "environment_variable_name": "ENABLE_VM_NAME",
                    "value": false,
                    "popover": "VM name",
                    "placeholder": "",
                    "order": 1,
                    "verify": false,
                    "children": [
                        {
                            "name": "vm_name_annotation_name",
                            "label": "Tetration Annotation Name",
                            "type": "text",
                            "environment_variable_name": "VM_NAME_ANNOTATION_NAME",
                            "value": "VM Name",
                            "placeholder": "Tetration Annotation Name",
                            "order": 1,
                            "verify": false
                        }
                    ]
                },
                {
                    "name": "vsphere_tags",
                    "label": "vSphere Tags",
                    "type": "switch",
                    "environment_variable_name": "ENABLE_VM_TAGS",
                    "value": false,
                    "popover": "vSphere Tags (tag1=value1;tag2=value2;)",
                    "placeholder": "",
                    "order": 2,
                    "verify": false,
                    "children": [
                        {
                            "name": "vsphere_tags_annotation_name",
                            "label": "Tetration Annotation Name",
                            "type": "text",
                            "environment_variable_name": "VSPHERE_TAGS_ANNOTATION_NAME",
                            "value": "VM Name",
                            "placeholder": "Tetration Annotation Name",
                            "order": 1,
                            "verify": false
                        }
                    ]
                },
                {
                    "name": "vm location",
                    "label": "VM Location",
                    "type": "switch",
                    "environment_variable_name": "ENABLE_VM_LOCATION",
                    "value": false,
                    "popover": "Location of VM (ESX Host/Cluster)",
                    "order": 3,
                    "verify": false,
                    "children": [
                        {
                            "name": "vm_location_annotation_name",
                            "label": "Tetration Annotation Name",
                            "type": "text",
                            "environment_variable_name": "VM_LOCATION_ANNOTATION_NAME",
                            "value": "VM Location",
                            "placeholder": "Tetration Annotation Name",
                            "order": 1,
                            "verify": false
                        }
                    ]
                },
                {
                    "name": "vm networks",
                    "label": "VM Networks",
                    "type": "switch",
                    "environment_variable_name": "ENABLE_VM_NETWORK",
                    "value": false,
                    "popover": "VM Networks (PortGroup-1,PortGroup-2)",
                    "order": 4,
                    "verify": false,
                    "children": [
                        {
                            "name": "vm_networks_annotation_name",
                            "label": "Tetration Annotation Name",
                            "type": "text",
                            "environment_variable_name": "VM_NETWORKS_ANNOTATION_NAME",
                            "value": "VM Networks",
                            "placeholder": "Tetration Annotation Name",
                            "order": 1,
                            "verify": false
                        }
                    ]
                }
            ]
        }
    ]
}